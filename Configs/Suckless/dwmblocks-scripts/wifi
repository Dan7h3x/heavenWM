#!/usr/bin/env bash

red="#FF3131"
purple="#9457EB"
green="#39FF14"
blue="#AD0DBF"
bblue="#89CFF0"
orange="#F6890A"
yellow="#CCFF00"
cyan="#00FEFC"
teal="#43BBB6"
black="#000000"

SSID=$(iwgetid -r)
case "$(cat /sys/class/net/wl*/operstate 2>/dev/null)" in
up) printf "^b$black^^c$blue^яки=^d^^b$blue^^c$black^%s$SSID^d^ " ;;
down) printf "^b$black^^c$red^якй=^d^^b$blue^^c$black^Off^d^ " ;;
esac
